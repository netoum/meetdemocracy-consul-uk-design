<div id="<%= dom_id(card) %>"
     class="card small-12 medium-<%= card.columns %> column margin-bottom end">
  <%= link_to card.link_url do %>
    <figure class="figure-card govuk-card">
      
      <figcaption>
        <% if card.label.present? %>
          <span class="govuk-tag"><%= card.label %></span>
        <% end %>
        <br>
        <h3 class="govuk-heading-s"><%= card.title %></h3>
      </figcaption>
    </figure>
    <p class="govuk-body"><%= card.description %></p>
    <p class="govuk-link govuk-!-font-weight-bold"><%= card.link_text %></p>
  <% end %>
</div>
